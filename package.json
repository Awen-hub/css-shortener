{
  "name": "css-shortener",
  "version": "1.2.0",
  "description": "Utility to shorten css class names",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src -d lib",
    "prettier": "prettier --single-quote --write src/**/*.js",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "pre-commit": [
    "prettier",
    "build",
    "test"
  ],
  "bin": {
    "css-shortener": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbrandau/css-shortener.git"
  },
  "keywords": [
    "css",
    "short",
    "class",
    "name",
    "shorten"
  ],
  "author": "Maximilian Brandau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mbrandau/css-shortener/issues"
  },
  "homepage": "https://github.com/mbrandau/css-shortener#readme",
  "dependencies": {
    "replacestream": "^4.0.3",
    "yargs": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^11.9.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "should": "^13.2.1",
    "stream-to-string": "^1.1.0",
    "string-to-stream": "^1.1.1"
  }
}
